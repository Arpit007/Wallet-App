<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bhatnagar.arpit.wallet.UI.SetNum">

    <EditText
        android:maxLines="1" android:id="@+id/Num"
        android:inputType="number" android:maxLength="10"
        android:textAlignment="center" android:textSize="20sp"
        android:layout_centerInParent="true" android:hint="Phone Number"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
        android:background="@android:color/holo_green_light"
        android:padding="10dp" android:id="@+id/Set"
        android:text="Set" android:gravity="center" android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

</RelativeLayout>
