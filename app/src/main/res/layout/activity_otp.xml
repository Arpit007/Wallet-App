<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bhatnagar.arpit.wallet.UI.Otp">
    <TextView
        android:background="@color/zxing_possible_result_points"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp" android:text="Enter 4 digit OTP Code"
        android:id="@+id/Number" android:layout_alignParentTop="true"
        android:layout_width="match_parent" android:layout_height="70dp"/>

    <EditText
        android:id="@+id/OtpCode"
        android:hint="OTP"
        android:layout_centerInParent="true" android:inputType="numberPassword"
        android:textAlignment="center"
        android:layout_margin="20dp" android:maxLength="4" android:maxLines="1"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/Done" android:background="@android:color/holo_green_light"
        android:textSize="30sp" android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true" android:text="Done"
        android:layout_width="match_parent" android:layout_height="50dp"/>
</RelativeLayout>
